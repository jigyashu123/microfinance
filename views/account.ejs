      <h2><%= pp.name %></h2>
      <style>
         /* Set black background color, white text and some padding */
         footer {
           background-color: #555;
           color: white;
           padding: 15px;
         }
         div.classWithPad1{
         background-color:#9400D3;
         color: white;
         margin: 40px 9px 10px 9px;
         padding:40px;
         font-size:40px;
        max-width: 700px;
        min-height:220px !important;
         }

         div.classWithPad2{
       background-color: rgb(145, 255, 224);
         color: white;
         margin: 10px 9px 10px 9px;
         padding:40px;
         font-size:40px;
        max-width: 700px;
        min-height:220px !important;
         }



