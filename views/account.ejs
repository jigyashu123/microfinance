<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 well">
      <div class="well">
        <p><a href="#">My Profile</a></p>
        <img src="https://www.reduceimages.com/img/image-after.jpg" class="img-circle" height="65" width="65" alt="Avatar">
      </div>
      <% pp.forEach(function(a) { %>
      <div class="col-lg-12 col-md-12">
                    <span class="glyphicon glyphicon-user input-place"></span>
                    <input type="text" class="form-control form-input" value="<%= a.name %>" placeholder="<%= a.name %>" disabled id="<%= a.name %>">
                </div>
                <div class="col-lg-12 col-md-12">
                  <span class="glyphicon glyphicon-star-empty input-place"></span>
                    <input type="text" class="form-control form-input" value="<%= a.wo %>" placeholder="<%= a.wo %>" disabled id="<%= a.wo %>">
                </div>
                <div class="col-lg-12 col-md-12">
                    <span class="glyphicon glyphicon-envelope input-place"></span>
                    <input type="text" class="form-control form-input" value="<%= a.groupname %>" placeholder="<%= a.groupname %>" disabled id="<%= a.groupname %>">
                </div>
                <div class="col-lg-12 col-md-12">
                     <span class="glyphicon glyphicon-earphone input-place"></span>
                    <input type="text" class="form-control form-input" value="<%= a.mobileno %>" placeholder="<%= a.mobileno %>" disabled id="<%= a.mobileno %>">
                </div>
                <div class="col-lg-12 col-md-12">
                <span class="glyphicon glyphicon-map-marker input-place"></span>
                    <input type="text" class="form-control form-input" value="<%= a.village %>" placeholder="<%= a.village %>" disabled id="<%= a.village %>">

                </div>
                <div class="col-lg-12 col-md-12">
                <span class="glyphicon glyphicon-map-marker input-place"></span>
                    <input type="text" class="form-control form-input" value="<%= a.installment %>" placeholder="<%= a.installment %>" disabled id="<%= a.installment %>">

                </div>

                <div class="col-lg-12 col-md-12">
                <span class="glyphicon glyphicon-map-marker input-place"></span>
                    <input type="text" class="form-control form-input" value="<%= a.loanamount%>" placeholder="<%= a.loanamount%>" disabled id="<%= a.loanamount%>">

                </div>
                <%})%>



  </div>
